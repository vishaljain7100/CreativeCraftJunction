<body>
    <% layout("/layouts/boilerplate.ejs") %>
        <main>
            <section class="details">
                <div class="Maincontainer">
                    <div class="photo">
                        <img src="<%= product[0].image %>" alt="...">
                    </div>
                </div>

                <div class="aboutProduct">
                    <div class="Title Price">
                        <h5 class="Product-title">
                            <%= product[0].categoryName %>
                        </h5>
                        <span>
                            <h6 class="Special-price">Special price</h6>
                            <h3 id="Price" class="mb-3"><i class="fa-solid fa-indian-rupee-sign"></i>
                                <%= product[0].price %>
                            </h3>
                        </span>
                    </div>
                    <div id="discription mb-3">
                        <img width="15" height="15" src="https://img.icons8.com/ios-glyphs/30/000000/sphere.png"
                            alt="sphere" />
                        <h5 class="discription" style="display: inline;">
                            <%= product[0].description %>
                        </h5>
                    </div>
                </div>
                <div class="Carts-Buy">
                    <button class="cart"><i class="fa-solid fa-cart-shopping"></i>Add to Cart</button>
                    <button class="buy"><i class="fa-solid fa-bolt"></i>Buy Now</button>
                </div>
            </section>
            <hr>
            <div class="Postcontainer">
                <% for(let i=0; i<AllCateProduct.length; i++){ %>
                    <div class="card">
                        <a href="/category/<%= AllCateProduct[i].categoryName %>/<%= AllCateProduct[i].productId %>">
                            <div class="picture">
                                <img src="<%= AllCateProduct[i].image %>" class="card-img-top" alt="img">
                            </div>
                            <div class="card-body">
                                <h5 class="card-text">
                                    <img width="24" height="24"
                                        src="https://img.icons8.com/material-rounded/24/rupee.png" alt="rupee" />
                                    <%= AllCateProduct[i].price %>
                                </h5>
                                <p class="card-text">
                                    ProductId : <%= AllCateProduct[i].productId %>
                                </p>
                            </div>
                        </a>
                    </div>
                    <% } %>
            </div>
        </main>

</body>