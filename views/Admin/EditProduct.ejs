<% layout("/Admin/AdminLayout/boilerplate.ejs") %>

    <body>
        <div class="row" id="editDiv">
            <h3 id="Category-text">
                Edit Product
            </h3>
            <form action="/Admin/Product/Edit/<%= Products[0].productId %>?_method=PATCH" enctype="multipart/form-data"
                method="post" novalidate class="needs-validation" id="editForm">
                <div id="mainDiv">
                    <div class="details col-md-4">
                        <div class="mb-3 form-floating">
                            <input required type="text" class="form-control" value="<%= Products[0].title %>"
                                name="listing[title]" id="title" placeholder="Title">
                            <label for="title" class="form-label pl-1"><img width="25" height="25"
                                    src="https://img.icons8.com/color/48/collect.png" alt="collect" /> &nbsp;
                                Title</label>
                            <div class="invalid-feedback">
                                Invalid Title
                            </div>
                        </div>
                        <div class="mb-3 form-floating">
                            <input required type="text" class="form-control" value="<%=Products[0].description %>"
                            name="listing[description]"
                            id="Description" placeholder="Description">
                            <label for="Description" class="form-label pl-1"><img width="25" height="25"
                                    src="https://img.icons8.com/color/48/collect.png" alt="collect" />
                                &nbsp;Description</label>
                            <div class="invalid-feedback">
                                Invalid Description
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-2 col-md-6 form-floating">
                                <input required type="number" value="<%= Products[0].price %>" class="form-control"
                                    name="listing[price]" id="Price" placeholder="1,200">
                                <label for="Price" class="form-label"> <img width="30" height="30"
                                        src="https://img.icons8.com/fluency/48/price-tag-euro.png"
                                        alt="price-tag-euro" />
                                    Price</label>
                                <div class="invalid-feedback">
                                    Enter Valid Price
                                </div>
                            </div>
                            <div class="mb-2 col-md-6 form-floating">
                                <input required type="text" class="form-control" value="<%= Products[0].productId %>"
                                    name="listing[productId]" id="Price" placeholder="1,200">
                                <label for="productId" class="form-label"><img width="30" height="30"
                                        src="https://img.icons8.com/color/48/pen.png" alt="pen" /> Product
                                    Id</label>
                                <div class="invalid-feedback">
                                    Enter Valid Product Id
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-2 col-md-6 form-floating">
                                <input required type="text" value="<%= Products[0].categoryName %>" class="form-control"
                                    name="listing[categoryName]" id="categoryName" placeholder="categoryName">
                                <label for="categoryName" class="form-label pl-1"><img width="30" height="30"
                                        src="https://img.icons8.com/color/48/sorting-answers.png"
                                        alt="sorting-answers" />
                                    Category
                                    Name</label>
                                <div class="invalid-feedback">
                                    Invalid Category Name
                                </div>
                            </div>
                            <div class="mb-2 col-md-6 form-floating">
                                <input required type="number" class="form-control" value="<%= Products[0].categoryId %>"
                                    name="listing[categoryId]" id="categoryId" placeholder="categoryId">
                                <label for="categoryId" class="form-label pl-1"><img width="30" height="30"
                                        src="https://img.icons8.com/color/48/sorting-answers.png"
                                        alt="sorting-answers" />
                                    Category
                                    Id</label>
                                <div class="invalid-feedback">
                                    Invalid Category Id
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="carouselExampleIndicators" class="carousel slide pointer-event col-md-4">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0"
                                class="active bg-which" aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" class="bg-which" data-bs-target="#carouselExampleIndicators"
                                data-bs-slide-to="1" aria-label="Slide 2"></button>
                            <button type="button" class="bg-which" data-bs-target="#carouselExampleIndicators"
                                data-bs-slide-to="2" aria-label="Slide 3"></button>
                        </div>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="/uploads/<%= Products[0].image1 %>" class="d-block w-100">
                            </div>
                            <div class="carousel-item">
                                <img src="/uploads/<%= Products[0].image2 %>" class="d-block w-100">
                            </div>
                            <div class="carousel-item">
                                <img src="/uploads/<%= Products[0].image3 %>" class="d-block w-100">
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                            data-bs-slide="prev">
                            <span class="carousel-control-prev-icon"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                            data-bs-slide="next">
                            <span class="carousel-control-next-icon"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                    <div class="img col-md-4">
                        <div class="img1 mb-4">
                            <input type="text" class="form-control" readonly name="listing[image]" id="image1"
                                value="<%= Products[0].image1 %>">
                            <input type="file" class="form-control" style="margin-top: 5px;" name="listing[newImage]"
                                id="newImage1">
                            <div class="img1 mb-4 checkbox-container">
                                <input type="checkbox" name="changeImage1" id="changeImage1">
                                <label for="changeImage1">Change Image 1</label>
                            </div>
                            <div class="invalid-feedback">
                                Image 1 required
                            </div>
                        </div>
                        <div class="img2 mb-4">
                            <input type="text" class="form-control" readonly name="listing[image2]" id="image2"
                                value="<%= Products[0].image2 %>">
                            <input type="file" class="form-control" style="margin-top: 5px;" name="listing[newImage]"
                                id="newImage2">
                            <div class="img2 mb-4 checkbox-container">
                                <input type="checkbox" name="changeImage2" id="changeImage2">
                                <label for="changeImage2">Change Image 2</label>
                            </div>
                            <div class="invalid-feedback">
                                Image 2 required
                            </div>
                        </div>
                        <div class="img3 mb-4">
                            <input type="text" class="form-control" readonly name="listing[image3]" id="image3"
                                value="<%= Products[0].image3 %>">
                            <input type="file" class="form-control" style="margin-top: 5px;" name="listing[newImage]"
                                id="newImage3">
                            <div class="img3 mb-4 checkbox-container">
                                <input type="checkbox" name="changeImage3" id="changeImage3">
                                <label for="changeImage3">Change Image 3</label>
                            </div>
                            <div class="invalid-feedback">
                                Image 3 required
                            </div>
                        </div>
                    </div>
                </div>
                <button class="button-33" role="button">Done</button>
            </form>
        </div>
    </body>