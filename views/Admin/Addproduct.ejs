<% layout("/Admin/AdminLayout/boilerplate.ejs") %>

    <body>
        <form action="/Admin/Product" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
            <div class="row main-row col-8 offset-2"
                style="margin-top: 5rem;margin-bottom: 5rem; justify-content: center;">
                <%if(error.length !==0){ %>
                    <div class="alert alert-danger alert-dismissible fade show col-8" role="alert">
                        <%= error %>
                            <button type="button" class="btn-close " data-bs-dismiss="alert"
                                aria-label="Close"></button>
                    </div>
                    <%}%>
                        <div class="row">
                            <div class="Title description col-md-6">
                                <div class="mb-3 form-floating">
                                    <input required type="text" class="form-control" name="listing[title]" id="title"
                                        placeholder="Title">
                                    <label for="title" class="form-label pl-1"><img width="25" height="25"
                                            src="https://img.icons8.com/color/48/collect.png" alt="collect" /> &nbsp;
                                        Title</label>
                                    <div class="invalid-feedback">
                                        Invalid Title
                                    </div>
                                </div>
                                <div class="mb-3 form-floating">
                                    <input required type="text" class="form-control" name="listing[description]"
                                        id="Description" placeholder="Description">
                                    <label for="Description" class="form-label pl-1"><img width="25" height="25"
                                            src="https://img.icons8.com/color/48/collect.png" alt="collect" />
                                        &nbsp;Description</label>
                                    <div class="invalid-feedback">
                                        Invalid Description
                                    </div>
                                </div>
                            </div>
                            <div class="price productId col-md-6">
                                <div class="mb-3 form-floating col-md-12">
                                    <input required type="number" class="form-control" name="listing[price]" id="Price"
                                        placeholder="1,200">
                                    <label for="Price" class="form-label"> <img width="30" height="30"
                                            src="https://img.icons8.com/fluency/48/price-tag-euro.png"
                                            alt="price-tag-euro" />
                                        Price</label>
                                    <div class="invalid-feedback">
                                        Enter Valid Price
                                    </div>
                                </div>
                                <div class="mb-3 form-floating col-md-12">
                                    <input required type="text" class="form-control" name="listing[productId]"
                                        id="Price" placeholder="1,200">
                                    <label for="productId" class="form-label"><img width="30" height="30"
                                            src="https://img.icons8.com/color/48/pen.png" alt="pen" /> Product
                                        Id</label>
                                    <div class="invalid-feedback">
                                        Enter Valid Product Id
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <input required type="file" class="form-control" name="listing[image1]" id="Image1"
                                        placeholder="Image1">
                                    <div class="invalid-feedback">
                                        Image 1 required
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <input type="file" class="form-control" name="listing[image2]" id="Image2"
                                        placeholder="Image2">
                                </div>
                                <div class="mb-3">
                                    <input type="file" class="form-control" name="listing[image3]" id="Image3"
                                        placeholder="Image3">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3 form-floating">
                                    <input required type="text" class="form-control" name="listing[categoryName]"
                                        id="categoryName" placeholder="categoryName">
                                    <label for="categoryName" class="form-label pl-1"><img width="30" height="30"
                                            src="https://img.icons8.com/color/48/sorting-answers.png"
                                            alt="sorting-answers" />
                                        Category
                                        Name</label>
                                    <div class="invalid-feedback">
                                        Invalid Category Name
                                    </div>
                                </div>
                                <div class="mb-3 form-floating">
                                    <input required type="number" class="form-control" name="listing[categoryId]"
                                        id="categoryId" placeholder="categoryId">
                                    <label for="categoryId" class="form-label pl-1"><img width="30" height="30"
                                            src="https://img.icons8.com/color/48/sorting-answers.png"
                                            alt="sorting-answers" />
                                        Category
                                        Id</label>
                                    <div class="invalid-feedback">
                                        Invalid Category Id
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-outline-warning">Add</button>
            </div>
        </form>
    </body>