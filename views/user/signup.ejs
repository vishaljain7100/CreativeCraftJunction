<% layout("/layouts/boilerplate.ejs") %>

    <div class="row" id="signUp">
        <div class="col-4" id="signUpDiv">
            <span class="borderspan">
                <img src="/image/symbol.png" alt="logo.png" height="50vh" class="rounded-circle mb-3">

                <h5 class="title">Wellcome to Creative Craft Juction</h5>
                <hr>
                <form action="/User/signUp" method="post" class="needs-validation" id="signUpForm" novalidate>
                    <span style="color: red; font-weight: 700;">
                        <%if(LoginError.length !==0){ %>
                            <%= LoginError %>
                                <% }%>
                    </span>
                    <div class="mb-3 form-floating">
                        <input required type="number" class="form-control" name="user[ContactNumber]" id="number"
                            placeholder="number">
                        <label for="number" class="form-label pl-1"><i
                                class="fa-solid fa-phone"></i>&nbsp;NUMBER</label>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Number is Invalid
                        </div>

                    </div>
                    <div class="mb-3 form-floating">
                        <input required type="email" class="form-control" name="user[email]" id="email"
                            placeholder="email">
                        <label for="email" class="form-label pl-1"><i class="fa-solid fa-envelope"></i>&nbsp;
                            EMAIL</label>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Email is invalid
                        </div>
                    </div>
                    <button class="btn btn-outline-warning">Submit</button>
                </form>
                <p>Already have account? <a href="/user/login">Login</a></p>
            </span>
        </div>
    </div>