<% layout("/layouts/boilerplate.ejs") %>

    <div class="row">
        <div class="col-4" id="signUpDiv">
            <span class="borderspan">
                <h5 class="title">Wellcome to wanderLust</h5>
                <hr>
                <form action="/User/signUp" method="post" class="needs-validation" id="signUpForm" novalidate>
                    <span>
                        SINGUP
                    </span>
                    <div class="mb-3 form-floating">
                        <input required type="number" class="form-control" name="user[ContactNumber]" id="number"
                            placeholder="number">
                        <label for="number" class="form-label pl-1"><i
                                class="fa-solid fa-envelope"></i>&nbsp;NUMBER</label>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Number is Invalid
                        </div>

                    </div>
                    <div class="mb-3 form-floating">
                        <input required type="text" class="form-control" name="user[username]" id="username"
                            placeholder="username">
                        <label for="username" class="form-label pl-1"><i class="fa-solid fa-user"></i>&nbsp;
                            USERNAME</label>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Username is invalid
                        </div>
                    </div>
                    <div class="mb-3 form-floating">
                        <input required type="email" class="form-control" name="user[email]" id="email"
                            placeholder="email">
                        <label for="email" class="form-label pl-1"><i class="fa-solid fa-envelope"></i>&nbsp;
                            EMAIL</label>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Email is invalid
                        </div>
                    </div>
                    <button class="btn btn-outline-warning">Submit</button>
                </form>
                <p>Already have account? <a href="/user/login">Login</a></p>
            </span>
        </div>
    </div>